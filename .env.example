# KnightGPT Environment Configuration
# Copy to .env and customize

# vLLM Embedding Server
VLLM_EMBEDDING_URL=http://localhost:8001/v1
VLLM_EMBEDDING_MODEL=Alibaba-NLP/gte-Qwen2-7B-instruct
VLLM_EMBEDDING_BATCH_SIZE=32

# vLLM Inference Server
VLLM_INFERENCE_URL=http://localhost:8000/v1
VLLM_INFERENCE_MODEL=meta-llama/Llama-3.3-70B-Instruct
VLLM_MAX_TOKENS=4096
VLLM_TEMPERATURE=0.7

# Neo4j Database (optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# Knowledge Graph
GRAPH_SIMILARITY_THRESHOLD=0.7
GRAPH_MAX_NEIGHBORS=10
GRAPH_PATH=data/processed/graph.graphml

# Chunking
CHUNK_MAX_TOKENS=500
CHUNK_OVERLAP_TOKENS=50

# Data Directories
INGEST_RAW_PDF_DIR=data/raw_pdfs
INGEST_MARKDOWN_DIR=data/markdown
INGEST_PROCESSED_DIR=data/processed

# API Server
API_HOST=0.0.0.0
API_PORT=8080
API_CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Open WebUI
WEBUI_SECRET_KEY=your_secret_key_here

# Cloudflare (for production)
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# Hugging Face (for gated models)
# HF_TOKEN=your_hf_token_here
